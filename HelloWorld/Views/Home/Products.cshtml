@model HelloWorld.Models.Product[]

@{
    ViewBag.Title = "Products";
    Layout = "~/Views/_BasicLayout.cshtml";

}

@if (Model.Length > 0)
{
    <table>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@switch (product.ProductCount)
                { case 0: @:Out of Stock 
                break; 
                case 1: @:Low Stock 
                break;
                    default:<p>@product.ProductCount items</p>
                        break;
                }
    </td>
                </tr>
        }
    </table>
}
                else
                {
                    <h2>No product data found.</h2>
                }
