@model BirthdayCard.Models.CardForm

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Styles.css" rel="stylesheet" />
    <title>Main</title>
</head>
<body>
    <div class="panel panel-success">

        <div class="panel-heading">
            <p>Birthday Card Generator</p>
        </div>

        <div class="panel-body">
            <h2>Send a Birthday Card</h2>

            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()
                <div class="form-group">
                    <label>From:</label>
                    @Html.TextBoxFor(x => x.FromEmail, new { @class = "form-control" })
                    <label>To:</label>
                    @Html.TextBoxFor(x => x.ToEmail, new { @class = "form-control" })
                    <label>Message:</label>
                    @Html.TextBoxFor(x => x.Message, new { @class = "form-control" })
                </div>
                <input class="btn btn-success" type="submit" value="Send Card" />
            }
        </div>

        <div class="panel-footer">
            <p>&copy;2016 - My ASP.NET Application</p>
        </div>
    </div>
</body>
</html>
